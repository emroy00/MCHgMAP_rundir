  WetLossLS.template:         '%y4%m2%d2_%h2%n2z.nc4',
  WetLossLS.frequency:        'End', 
  WetLossLS.duration:         'End', 
  WetLossLS.mode:             'instantaneous'
  WetLossLS.fields:           'WetLossLS_?WET?               ',
::
#==============================================================================
